{
  "name": "minimal-wapo-ts-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "start": "docker run --rm --name wapo -p 8000:80 -v $(pwd)/dist:/home/wapo phalanetwork/wapo-devserver",
    "watch": "npm-watch",
    "dev": "concurrently \"npm:watch\" \"npm:start\""
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "author": "Phala Network",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.1.0",
    "concurrently": "^9.0.1",
    "npm-watch": "^0.13.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@phala/wapo-env": "^0.9.3",
    "hono": "^4.5.4",
    "viem": "^2.19.9"
  }
}
